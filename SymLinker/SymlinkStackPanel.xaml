<UserControl x:Class="SymLinker.SymlinkStackPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SymLinker"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="300">
    <StackPanel Margin="0,0,0,30">
        <TextBlock Text="Folder Path"/>
        <TextBox TextWrapping="Wrap" Text="{Binding FolderPathName}" IsEnabled="False"  IsReadOnly ="True"  Width="auto" Margin="0,0,0,10"/>
        <TextBlock Text="Symlink Name"/>
        <TextBox TextWrapping="Wrap" Text="{Binding SymlinkName}" Width="auto" Margin="0,0,0,10"/>
        <Button Content="- Remove" Width="60" Click="Button_Click"/>


    </StackPanel>
</UserControl>
