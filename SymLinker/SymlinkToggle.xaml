<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SymLinker"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="SymLinker.SymlinkToggle"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,0,0,15">
        <mah:ToggleSwitch Name="toggle" IsOn="{Binding IsToggled}"  Header="{Binding SymlinkName}"  Height="auto" Margin="0,0,0,0" VerticalAlignment="Center" Width="auto" Toggled="OnToggle"/>
    </StackPanel>
</UserControl>
